@model HelperFunctionsViewModel

<div class="js-logged-in-view">
    <div class="card start-hero">
        <p class="text-display-2">
            Helper functions
        </p>
    </div>

    <div class="user-fields">
        <h3>Get claim: (iss)</h3>
        <input title="iss" value="@Model.IssClaim"/>
    </div>

    <div class="user-fields">
        <h3>Organization</h3>
        <input title="organization" value="@Model.Organization"/>
    </div>

    <div class="user-fields">
        <h3>User organizations</h3>
        <input title="organizations" value="@Model.UserOrganizations"/>
    </div>

    <div class="user-fields">
        <h3>Get flag: (theme)</h3>
        <input title="theme" value="@Model.ThemeFlag"/>
    </div>

    <div class="user-fields">
        <h3>Get boolean flag: (is_dark_mode)</h3>
        <input title="is_dark_mode" value="@Model.IsDarkMode"/>
    </div>

    <div class="user-fields">
        <h3>Get string flag: (theme)</h3>
        <input title="theme string" value="@Model.Theme"/>
    </div>

    <div class="user-fields">
        <h3>Get integer flag: (competition_limit)</h3>
        <input title="competition_limit" value="@Model.CompetitionsLimit"/>
    </div>

    <div class="user-fields">
        @Html.ActionLink("Back to Home", "Index", "Home", null, new { @class = "btn btn-dark" })
    </div>
</div>